#!/usr/bin/env ruby
begin
  require 'high_five'
rescue LoadError
  require 'rubygems'
  require 'high_five'
end
if ARGV[0] == '-h'
  ARGV = ['help', 'deploy']
end

HighFive::ROOT = Dir.pwd

action = ARGV[0] || "help"

case action
when "deploy"
    HighFive::Deploy.start
when "help"
    puts "Usage: hi5 deploy -e environment -p platform"
    puts "\tcurrent supported environments are development or production"
    puts "\tcurrent supported platforms are android, ios, and web"
end
